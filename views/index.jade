                  | 
                .line
                  span.main-prompt $
                  span.command
                    |  git
                  span.arguments
                    |  checkout master
                .line.data Switched to branch 'master'
                .line
                  | 
                .line
                  span.main-prompt $
                  span.command
                    |  rails
                  span.arguments
                    |  console
                .line.data
                  | Loading development environment (Rails 4.2.0)
                .line.data
                  | irb(main):001:0> 
                  span.arguments
                    | ENV
                    span.data [
                    span.string "DATABASE_URL"
                    span.data ]
                .line.data
                  | => 
                  span.string "mysql://localhost/your-app_development"

  .row.cta
    .col-lg-3.col-lg-offset-3.col-md-4.col-md-offset-2.col-sm-6
      a.btn.btn-primary.btn-lg.btn-block(href='/documentation#installation')
        | Install v0.7.1
    .col-lg-3.col-md-4.col-sm-6
      a.btn.btn-default.btn-lg.btn-block(href='#collaborate')
        | Collaborate 
        i.fa.fa-chevron-down

  .row.section#collaborate
    .col-md-12
      .row
        .col-md-12
          h1.text-center
            span.highlight Collaborate
            |  without compromising security.
          p.lead.text-center Share your app with anyone without sharing your app's secrets.
        .col-lg-6
          h3.text-center.highlight You
          .window.mac
            .title-bar
              .exit
              .minimize
              .zoom
              .title
                | Terminal &mdash; bash
            .page
              .terminal(style='min-height:20em;')
                .line
                  span.main-prompt $
                  span.command
                    |  spore
                  span.arguments
                    |  set -p SECRET
                .line.prompt
                  | === your-app
                .line.prompt
                  | development:
                .line.prompt
                  |   SECRET:
                  span.data
                    |  fake-dev-key
                .line.prompt
                  | production:
                .line.prompt
                  |   SECRET:
                  span.data
                    |  secret-production-key
                .line.data
                  | SECRET set for your-app/development,production
                .line
                  | 
                .line
                  span.main-prompt $
                  span.command
                    |  spore
                  span.arguments
                    |  grant contractor@production-server.example
                .line.data
                  | Read access for your-app/development granted for contractor@production-server.example
        .col-lg-6
          h3.text-center.highlight Your Collaborator
          .window.mac
            .title-bar
              .exit
              .minimize
              .zoom
              .title
                | Terminal &mdash; bash
            .page
              .terminal(style='min-height:20em;')
                .line
                  span.main-prompt $
                  span.command
                    |  spore
                  span.arguments
                    |  get --environment development
                .line.data
                  | === your-app
                .line.data
                  | development:
                .line.data
                  |   SECRET: fake-dev-key
                .line
                  | 
