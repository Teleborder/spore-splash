extends ./layout.jade

block content
  h1.header.text-center
    span.pre-wrap.highlight(oz-text='Verb')
    |  environment variables like you 
    span.pre-wrap.highlight(oz-text='verb')
    |  code

  .row
    .col-md-12
      .window.mac
        .title-bar
          .exit
          .minimize
          .zoom
          .title
            | Terminal &mdash; bash
        .page
          .terminal(oz-evt='keypress:type;keydown:keydown;focus:focus' tabindex='0')
            .line
              span.main-prompt $
              span.command
                |  spore
              span.arguments
                |  set -p VERB
            .line.prompt development:
            .line.indent2.prompt DOMAIN:
              span.data
                |  spore.dev
            .line.indent2.prompt VERB:
              span.data
                |  test
            .line.prompt production:
            .line.indent2.prompt DOMAIN:
              span.data
                |  spore.sh
            .line.indent2.prompt VERB:
              span.data
                |  
                span.pre-wrap(oz-text='verb')
                span.cursor
  .row
    .col-md-12
      .window.mac
        .title-bar
          .exit
          .minimize
          .zoom
          .title.document
            | .spore &mdash; spore-splash
        .page
          .editor
            .line
              | {
            .line.indent2
              |   "name": "spore-splash",
            .line.indent2
              |   "id": "
              span(oz-text='appId')
              | ",
            .line.indent2
              |   "envs": {
            .line.indent4
              |     "development": {
            .line.indent6
              |       "DOMAIN": "
              span(oz-text='developmentDomainId')
              | ",
            .line.indent6
              |       "VERB": "
              span(oz-text='developmentVerbId')
              | "
            .line.indent4
              |     },
            .line.indent4
              |     "production": {
            .line.indent6
              |       "DOMAIN": "
              span(oz-text='domainId')
              | ",
            .line.indent6
              |       "VERB": "
              span(oz-text='verbId')
              | "
            .line.indent4
              |     }
            .line.indent2
              |   }
            .line
              | }


block append scripts
  script(src='/assets/javascripts/index.js')
