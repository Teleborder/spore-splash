extends ./layout.jade

block append css
  link(rel='stylesheet' href='/css/emulator.css')
  link(rel='stylesheet' href='/css/index.css')

block content
  h1.header.text-center
    span.pre-wrap.highlight(oz-text='Verb')
    |  environment variables like you 
    span.pre-wrap.highlight(oz-text='verb')
    |  code

  .row
    .col-lg-6
      .window.mac
        .title-bar
          .exit
          .minimize
          .zoom
          .title
            | Terminal &mdash; bash
        .page
          .terminal(style='height:23em;', oz-evt='keypress:type;keydown:keydown;focus:focus' tabindex='0')
            .line
              span.main-prompt $
              span.command
                |  spore
              span.arguments
                |  set -p VERB
            .line.prompt
              | === spore-splash
            .line.prompt
              | development:
            .line.prompt
              |   VERB:
              span.data
                |  test
            .line.prompt
              | production:
            .line.prompt
              |   VERB:
              span.data
                |  
                span.pre-wrap(oz-text='verb')
                span.cursor
    .col-lg-6
      .window.mac
        .title-bar
          .exit
          .minimize
          .zoom
          .title.document
            | .spore &mdash; spore-splash
        .page
          .editor.json(style='height:23em;')
            .line
              | {
            .line
              |   "name": "spore-splash",
            .line
              |   "id": "
              span(oz-text='appId')
              | ",
            .line
              |   "envs": {
            .line
              |     "development": {
            .line
              |       "DOMAIN": "
              span(oz-text='developmentDomainId')
              | ",
            .line
              |       "VERB": "
              span(oz-text='developmentVerbId')
              | "
            .line
              |     },
            .line
              |     "production": {
            .line
              |       "DOMAIN": "
              span(oz-text='domainId')
              | ",
            .line
              |       "VERB": "
              span(oz-text='verbId')
              | "
            .line
              |     }
            .line
              |   }
            .line
              | }
  .row.cta
    .col-lg-3.col-lg-offset-3.col-md-4.col-md-offset-2.col-sm-6
      a.btn.btn-primary.btn-lg.btn-block(href='/documentation#installation')
        | Install v0.7.1
    .col-lg-3.col-md-4.col-sm-6
      a.btn.btn-default.btn-lg.btn-block(href='#seamless')
        | Work Seamlessly 
        i.fa.fa-chevron-down

  .row.section#seamless
    .col-md-12
      .row
        .col-md-12
          h1.text-center Develop and deploy across multiple environments
            span.highlight  seamlessly
            | .
          p.lead.text-center
            | Set variables once, and every server loads its correct environment.
        .col-lg-6
          h3.text-center.highlight Develop
          .window.mac
            .title-bar
              .exit
              .minimize
              .zoom
              .title
                | Terminal &mdash; ruby
            .page
              .terminal(style='min-height:20em;')
                .line
                  span.main-prompt $
                  span.command
                    |  spore
                  span.arguments
                    |  set -p SECRET
                .line.prompt
                  | === your-app
                .line.prompt
                  | development:
                .line.prompt
                  |   SECRET:
                  span.data
                    |  fake-dev-key
                .line.prompt
                  | production:
                .line.prompt
                  |   SECRET:
                  span.data
                    |  secret-production-key
                .line.data
                  | SECRET set for your-app/development,production
                .line
                  | 
                .line
                  span.main-prompt $
                  span.command
                    |  rails
                  span.arguments
                    |  console
                .line.data
                  | Loading development environment (Rails 4.2.0)
                .line.data
                  | irb(main):001:0> 
                  span.arguments
                    | ENV
                    span.data [
                    span.string "SECRET"
                    span.data ]
                .line.data
                  | => 
                  span.string "fake-dev-key"
        .col-lg-6
          h3.text-center.highlight Deploy
          .window.mac
            .title-bar
              .exit
              .minimize
              .zoom
              .title
                | Terminal &mdash; ssh
            .page
              .terminal(style='min-height:20em;')
                .line
                  span.main-prompt $
                  span.command
                    |  ./deploy_app.sh
                .line
                  | your-app deployed to production-server.example
                .line
                  | 
                .line
                  span.main-prompt $
                  span.command
                    |  ssh
                  span.arguments
                    |  you@production-server.example
                .line.data
                  | you@production-server.example's password:
                .line.data
                  | Welcome to your production server
                .line.data
                  | 
                .line.data
                  | Last login 
                  span(oz-text='yesterday')
                .line
                  span.main-prompt
                    | you@production-server.example:~$ 
                  span.command rails 
                  span.arguments console
                .line.data
                  | Loading development environment (Rails 4.2.0)
                .line.data
                  | irb(main):001:0> 
                  span.arguments
                    | ENV
                    span.data [
                    span.string "SECRET"
                    span.data ]
                .line.data
                  | => 
                  span.string "secret-production-key"

  .row.cta
    .col-lg-3.col-lg-offset-3.col-md-4.col-md-offset-2.col-sm-6
      a.btn.btn-primary.btn-lg.btn-block(href='/documentation#installation')
        | Install v0.7.1
    .col-lg-3.col-md-4.col-sm-6
      a.btn.btn-default.btn-lg.btn-block(href='#in-sync')
        | Stay in sync 
        i.fa.fa-chevron-down

